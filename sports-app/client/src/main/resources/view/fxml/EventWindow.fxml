<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import tornadofx.control.DateTimePicker?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.EventViewController"
            prefHeight="400.0" prefWidth="600.0">

    <TextArea fx:id="eventDescription" layoutX="10" layoutY="10" maxHeight="100" maxWidth="400" ></TextArea>
    <TextField fx:id="eventName" layoutX="10" layoutY="150" prefWidth="200"></TextField>
    <DateTimePicker fx:id="eventStartDateTimePicker" layoutX="10" layoutY="190" prefWidth="200"></DateTimePicker>
    <DateTimePicker fx:id="eventEndDateTimePicker" layoutX="10" layoutY="260" prefWidth="200"></DateTimePicker>
    <Button fx:id="createEventButton" text="Create Event" layoutX="10" layoutY="310" onAction="#createEvent" mnemonicParsing="false" textAlignment="CENTER">
        <font>
            <Font size="15.0" />
        </font>
    </Button>
</AnchorPane>
